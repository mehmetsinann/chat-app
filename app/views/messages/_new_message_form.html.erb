<div class="form-group msg-form flex flex-col bg-gray-800 px-4">
  <%= form_with(model: [@single_room ,@message],remote: true, class: "flex flex-row my-4",
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content text-gray-800 w-full rounded-lg", autocomplete: 'off' %>
    <%= f.submit "Send", data: { disable_with: false }, class: "hover:cursor-pointer rounded-lg duration-200 border border-gray-100 text-gray-100 hover:bg-gray-100 hover:text-gray-800 ml-2 px-2" %>
  <% end %>
</div>